<% if (sessions) { %>
  <ul class="list-group">
    <% sessions.forEach(function(session){ %>
      <li class="session-item">
      <a href="/user/<%= session.userName %>"><img width="40" src="http://www.gravatar.com/avatar/<%= session.gravatarHash %>" /></a>
      <p>
      <a href="/user/<%= session.userName %>"><%= session.userName %></a> played <a href="/session/<%= session._id %>"><%= session.gameName %></a>
       on <%= session.date.getDate() %>/<%= session.date.getMonth()+1 %>
       </p>
      </li>
    <% }) %>
  </ul>
<% } %>