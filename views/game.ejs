<% include head %>
<% include auth_menu %>
<h2><%= game.name %></h2>
<a class="newsession" href="/logsession/<%= game._id %>">Log a session</a>
<% if (game.bggLink && game.bggLink != "undefined") { %>
<a href="<%= game.bggLink %>"><h4>more info</h4></a><br>
<% } %>

<% if (game.description) { %>
<h4>Description</h4>
<%= game.description %><br><br>
<% } %>

<% if (locals.numberOfSessions) { %>
<h4>Number of registered sessions</h4>
<div class="big_number"><%= locals.numberOfSessions %></div>
<% } %>
<div class="tools">
<a class="content-link" href="/editgame/<%= game._id %>">Edit</a>
<% if (user.name === "martin") { %>
<a class="content-link" href="/deletegame/<%= game._id %>">Delete</a>
<% } %>
